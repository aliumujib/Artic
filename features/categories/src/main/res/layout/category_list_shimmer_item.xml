<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/one_space"
    android:paddingStart="@dimen/two_space"
    android:paddingEnd="@dimen/two_space"
    android:paddingTop="@dimen/one_space">

    <View
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@color/demo_dark_transparent" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/one_space"
        android:layout_weight="1"
        android:background="@color/demo_dark_transparent" />

    <View
        android:id="@+id/category_count"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/one_space"
        android:background="@color/demo_dark_transparent"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="@dimen/text_18"
        tools:text="200" />

</LinearLayout>
